@model FootballLeague.Web.ViewModels.Models.MatchDayViewModel

@{
    ViewData["Title"] = "Index";
}

<a asp-action="Create">Add new match</a>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="List" method="get">
            <div class="form-group">
                <input asp-for="MatchDay" class="form-control" />
                <span asp-validation-for="MatchDay" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>