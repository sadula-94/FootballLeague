@model FootballLeague.Web.ViewModels.Models.MatchCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HomeTeamId" class="control-label"></label>
                <input asp-for="HomeTeamId" class="form-control" />
                <span asp-validation-for="HomeTeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayTeamId" class="control-label"></label>
                <input asp-for="AwayTeamId" class="form-control" />
                <span asp-validation-for="AwayTeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MatchDay" class="control-label"></label>
                <input asp-for="MatchDay" class="form-control" />
                <span asp-validation-for="MatchDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


