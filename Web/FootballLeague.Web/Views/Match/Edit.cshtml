@model FootballLeague.Web.ViewModels.Models.MatchViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HomeTeam" class="control-label"></label>
                <input asp-for="HomeTeam" class="form-control" disabled>
            </div>
            <div class="form-group">
                <label asp-for="AwayTeam" class="control-label"></label>
                <input asp-for="AwayTeam" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="HomeGoals" class="control-label"></label>
                <input asp-for="HomeGoals" class="form-control" />
                <span asp-validation-for="HomeGoals" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayGoals" class="control-label"></label>
                <input asp-for="AwayGoals" class="form-control" />
                <span asp-validation-for="AwayGoals" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MatchDay" class="control-label"></label>
                <input asp-for="MatchDay" class="form-control" disabled/>
                <span asp-validation-for="MatchDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

